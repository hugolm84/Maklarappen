<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip"
                android:id="@+id/list_menu_item_layout"
                style="@style/ColoredListItem">

    <!-- List row right item holder -->

        <RelativeLayout
                android:id="@+id/list_menu_right_item_layout"
                android:layout_alignRight="@+id/list_menu_right_arrow"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="6dp"
                android:layout_centerVertical="true"
                >
            <TextView
                    android:id="@+id/list_menu_right_item_shape_holder"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/rounded_shaped"
                    android:textColor="#000"
                    android:padding="8dp"
                    android:visibility="invisible"
                    />
            <TextView
                    android:id="@+id/list_menu_right_item_text_holder"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="14"
                    android:textAppearance="@android:style/TextAppearance.Holo.Small"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    />

        </RelativeLayout>

    <!-- Left icon -->
    <ImageView
            android:id="@+id/list_menu_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"/>

    <!-- List row right arrow holder -->
    <ImageView
            android:id="@+id/list_menu_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_next"
            android:layout_marginLeft="5dip"
            android:visibility="invisible"/>

    <!-- Base text-->
    <TextView
            android:id="@+id/list_menu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom ="5dip"
            android:text="Eklund Stockholm New York"
            android:layout_centerVertical="true"
            android:paddingTop="5dip"
            android:gravity="start"
            style="@style/ListItemTextView"
            android:layout_toRightOf="@+id/list_menu_left_icon"/>

</RelativeLayout>  