<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/progress_item_layout"
            android:background="@android:color/white">

        <com.itm.projekt.Items.ProgressButton
                android:id="@+id/item_progress"
                style="@style/ProgressButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/text_holder"
                android:layout_gravity="center_horizontal|top">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Jansson AB"
                    android:id="@+id/item_title"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10% områdesandel"
                    android:id="@+id/item_caption"
                     android:layout_alignLeft="@+id/item_title"
                    android:layout_below="@+id/item_title"
                    android:textAppearance="@android:style/TextAppearance.Holo.Small"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snittålder: 10 dagar"
                    android:id="@+id/item_caption_below"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/item_caption"
                    android:textAppearance="@android:style/TextAppearance.Holo.Small"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"/>
            <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/list_item_right_layout"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >
                <TextView
                        android:id="@+id/list_item_right_shape_holder"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_shaped"
                        android:textColor="#000"
                        android:padding="8dp"
                        android:visibility="visible"
                        />
                <TextView
                        android:id="@+id/list_item_right_text_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="14"
                        android:textAppearance="@android:style/TextAppearance.Holo.Small"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        />

            </RelativeLayout>



        </RelativeLayout>
</LinearLayout>